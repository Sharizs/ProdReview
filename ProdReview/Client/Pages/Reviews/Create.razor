@page "/reviews/create/"
@inject HttpClient _client
@inject NavigationManager _navManager


<h3 class="card-title">Create New Review</h3>
<hr />
<br />


<FormComponent ButtonText="Create Review" review="review" OnValidSubmit="@CreateMake" />

@code {
    Review review = new Review();

    private async Task CreateMake()
    {
        await _client.PostAsJsonAsync("api/reviews", review);
        _navManager.NavigateTo("/reviews/");
    }
}